@model IEnumerable<SearchPic_V2.Models.Image>
@{
    ViewData["Title"] = "Result";
}

<h2>Результати пошуку</h2>
@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var image in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="@image.BlobUrl" alt="@image.FileName" />
                    <div class="card-body">
                        <p class="card-text">
                            Теги: @string.Join(", ", image.Tags.Select(t => t.TagName))
                        </p>
                        <a asp-action="ViewImage" asp-route-id="@image.ImageId" class="btn btn-primary">Переглянути</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Зображень за даними ключовими словами не знайдено.</p>
}